<!DOCTYPE html>
<html>
  <head>
    <title>PlaynowRailsproject</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <div class="navbar_container">
      <ul>
        <li class="main"><%= link_to 'Home', root_path %></li>
      </ul>
      <ul class="navbar_container">
      <% if user_signed_in? %>
        <li class="secondary" ><%= link_to 'Profile', edit_user_registration_path %></li>
        <li class="secondary" ><%= link_to 'Sign out', destroy_user_session_path, method: :delete %></li>
        <li class="secondary" ><%= link_to 'Publish', edit_user_registration_path %></li>
        <%# link the Publish path  %>
      <% else %>
        <li class="secondary"><%= link_to 'Log In', new_user_session_path %></li>
        <li class="secondary"><%= link_to 'Sign Up', new_user_registration_path %></li>
      <% end %>
      </ul>
  <% flash.each do |key, value| %>
    <%= value %>
  <% end %>
  </div>

    <%= yield %>
  </body>
</html>
