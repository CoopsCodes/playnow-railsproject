<%= render 'shared/banneradd' %>

<div class='user_grid'>
  <div class='bio_display'>
    <div class='avatar'>avatar</div>
    <div class='details'>details</div>
  </div>
  
  <% if can? :create, Game %>
    <div class ='games_display'>
      <h1>Your Published Games</h1>
        <% @published.each do |game|  %>
          <div class="games">
            <h1><%= game.title %></h1>
            <p><%= link_to 'Edit', edit_game_path(game) %></p>
            <p><%= link_to 'Delete', game_path(game), method: 'delete' %></p>
          </div>
        <% end  %>
    </div>
  <% end %>
  <div class='games_display'>
  <h1>Your Game Keys</h1>
    <% @games.length.times do |i| %>
    <div class='games'>
      <h1><%= @games.game_title(i) %></h1>
      <h2><%= @games.game_publisher(i) %></h2>
      <h3><%= @games.game_key(i) %></h3>
    </div>
    <% end %>
  </div>
</div>